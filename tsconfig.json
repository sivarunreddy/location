{

  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "types": ["node", "jasmine"],
    "typeRoots": ["./node_modules/@types/"],
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules"
  ]
}
